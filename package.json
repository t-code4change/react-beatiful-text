{
  "name": "react-beautiful-text",
  "version": "2.0.2",
  "description": "A collection of beautiful, animated text components for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run typecheck && npm run test",
    "build": "npm run validate && tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags",
    "deploy": "npm run validate && ./deploy.sh",
    "deploy:patch": "npm run validate && ./quick-deploy.sh patch",
    "deploy:minor": "npm run validate && ./quick-deploy.sh minor",
    "deploy:major": "npm run validate && ./quick-deploy.sh major",
    "build:example": "cd example && npm install && npm run build",
    "dev:example": "cd example && npm run dev",
    "start:example": "cd example && npm run start"
  },
  "keywords": [
    "react",
    "text",
    "animation",
    "neon",
    "gradient",
    "typography",
    "ui",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/t-code4change/react-beautiful-text"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.0",
    "typescript": "^5"
  }
}
